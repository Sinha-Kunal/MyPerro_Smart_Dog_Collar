  accel_total_g = sqrt(pow(accel_x_g, 2) + pow(accel_y_g, 2) + pow(accel_z_g, 2));

  // Detect steps based on the acceleration magnitude
  if (accel_total_g > 1.0 ) {//&& accel_total_g < 2.5 // threshold for detecting a step
